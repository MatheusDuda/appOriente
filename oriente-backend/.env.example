# Configurações do Banco de Dados
DATABASE_URL=postgresql://user:password@localhost:5432/oriente

# Configurações JWT
# IMPORTANTE: Gerar novo JWT_SECRET para produção (use: openssl rand -hex 32)
JWT_SECRET=oriente-super-secret-development-key-that-is-long-enough-for-hs256-algorithm-to-work-properly-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Configurações do Servidor
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Configurações CORS (separar URLs por vírgula, sem espaços)
# Exemplo desenvolvimento: http://localhost:5173,http://localhost:3000
# Exemplo produção: https://apporiente.vercel.app,https://www.apporiente.vercel.app
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

# Configurações da Aplicação
APP_NAME=Oriente Backend
APP_VERSION=0.0.1
# Em produção, definir DEBUG=false
DEBUG=true

# Configurações de Upload/Anexos (valores padrão definidos em config.py)
# UPLOAD_DIR=uploads
# MAX_UPLOAD_SIZE=10485760  # 10MB em bytes
# ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,gif,doc,docx,xls,xlsx,txt,zip
# PROJECT_QUOTA_MB=100  # Quota total por projeto em MB

# Cloudinary (para uploads em produção)
# Obtenha suas credenciais em: https://cloudinary.com/console
# Se não configurado, usa armazenamento local (apenas desenvolvimento)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
